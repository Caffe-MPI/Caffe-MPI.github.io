net: "models/bvlc_googlenet/train_val.prototxt"

test_iter: 10000		# 50000/32
test_interval: 4000	
test_initialization: false

display:  100

max_iter: 2600         # 60 epochs B=64
base_lr:  0.01

# DGX1 =====================================
# max_iter: 300000        # 60 epochs B=256
# base_lr:  0.02
