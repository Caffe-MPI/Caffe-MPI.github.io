lr_policy: "poly"
power: 2
momentum: 0.9
weight_decay: 0.0002

snapshot: 1200000
snapshot_prefix: "models/bvlc_googlenet/snapshots/googlenet"
snapshot_after_train: true

solver_mode: GPU
random_seed: 1

